#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

Root:
    canvas:
        Color:
            rgb: 1, 1, 1
    BoxLayout:
        orientation: 'vertical'
        canvas:
        BoxLayout:
            size_hint_y: None
            height: 30
            #padding: [0, 0, 0, 1054]
            Button:
                pos: 0, 0
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'End Line (e)'
                on_release: root.end_line()
            Button:
                text: 'Undo Last (z)'
                on_release: root.undo_last()
            Button:
                text: 'Edit Lines (m)'
                on_release: root.toggle_modify()







