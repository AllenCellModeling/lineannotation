#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

Root:
    canvas:
        Color:
            rgb: 1, 1, 1
    BoxLayout:
        orientation: 'vertical'
        canvas:
        BoxLayout:
            size_hint_y: None
            height: 30
            #padding: [0, 0, 0, 1054]
            Button:
                pos: 0, 0
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Save'
                on_release: root.show_save()
            Button:
                text: 'Start Line'
                on_release: root.start_line()
            Button:
                text: 'End Line'
                on_release: root.end_line()
            Button:
                text: 'Clear Line'
                on_release: root.clear_line()







